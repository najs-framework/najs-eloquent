{
  "name": "najs-eloquent",
  "version": "0.4.0-alpha-1",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc -d",
    "coverage": "npm run build && jest ./dist/test/**/*.js ./dist/test/**/**/*.js ./dist/test/**/**/**/*.js --coverage --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepublishOnly": "tsc -d -p ./ --outDir dist",
    "test": "npm run coverage"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.ts",
      "**/test/**/*.test.js"
    ],
    "testEnvironment": "node"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/najs-framework/najs-eloquent.git"
  },
  "author": {
    "name": "Nhat Phan",
    "email": "nhat@ntworld.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.7"
  },
  "peerDependencies": {
    "najs-binding": "^1.8.0"
  },
  "dependencies": {
    "bson": "^3.0.2",
    "chance": "^1.0.13",
    "collect.js": "^4.0.11",
    "lodash": "^4.17.4",
    "moment": "^2.21.0",
    "najs-event": "^0.2.0",
    "najs-facade": "^1.1.1",
    "pluralize": "^7.0.0"
  },
  "devDependencies": {
    "@types/bson": "^1.0.11",
    "@types/chance": "^1.0.0",
    "@types/jest": "^21.1.8",
    "@types/lodash": "^4.14.91",
    "@types/pluralize": "^0.0.28",
    "@types/sinon": "^4.1.2",
    "@types/validator": "^9.4.1",
    "collect.js": "^4.0.11",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "najs-binding": "^1.8.0",
    "sinon": "^4.1.3",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.8.0",
    "validator": "^10.2.0"
  }
}
