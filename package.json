{
  "name": "najs-eloquent",
  "version": "0.3.0",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc -d",
    "coverage": "npm run build && jest ./dist/test/**/*.js ./dist/test/**/**/*.js --coverage --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepublishOnly": "tsc -d -p ./ --outDir dist",
    "integration": "npm run integration-build && npm run integration-lint && npm run integration-test",
    "integration-build": "npm run build && cd ./integration && tsc -d && cd ..",
    "integration-lint": "cd ./integration && tslint -c tslint.json -p tsconfig.json && cd ..",
    "integration-test": "jest ./integration/test --forceExit",
    "test": "npm run coverage && npm run integration"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "moduleFileExtensions": ["js", "ts", "json"],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/test/**/*.test.ts", "**/test/**/*.test.js"],
    "testEnvironment": "node"
  },
  "files": ["dist/**/*"],
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/najs-framework/najs-eloquent.git"
  },
  "author": {
    "name": "Nhat Phan",
    "email": "nhat@ntworld.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.7 <10.0.0"
  },
  "peerDependencies": {
    "collect.js": "^4.0.11",
    "moment": "^2.21.0",
    "najs-binding": "^1.8.0"
  },
  "dependencies": {
    "chance": "^1.0.13",
    "knex": "^0.14.4",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.11",
    "mongoose-timestamps-moment": "^1.0.0",
    "mysql": "^2.15.0",
    "najs-facade": "^1.1.1",
    "pluralize": "^7.0.0"
  },
  "devDependencies": {
    "@types/chance": "^1.0.0",
    "@types/jest": "^21.1.8",
    "@types/knex": "^0.14.9",
    "@types/lodash": "^4.14.91",
    "@types/mongoose": "^4.7.31",
    "@types/pluralize": "^0.0.28",
    "@types/sinon": "^4.1.2",
    "collect.js": "^4.0.11",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "moment": "^2.21.0",
    "najs-binding": "^1.8.0",
    "sinon": "^4.1.3",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
