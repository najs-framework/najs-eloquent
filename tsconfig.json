{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2017"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["./lib/**/*.ts", "./syntax/**/*.ts", "./example/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
